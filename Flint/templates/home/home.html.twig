{% extends 'layouts/authenticated.html.twig' %}

{% block main_class %}fullscreen-mode{% endblock %}

{% block body %}
  <div id="game-container"></div>

  {# üéØ HUD avec valeurs dynamiques li√©es √† la BDD #}
  <div id="hud">
    <div class="hud-item">
      üî• Streak: {{ app.user.getStats() ? app.user.getStats().getStreak() : 0 }}
    </div>
    <div class="hud-item">
      üíß Eau: {{ app.user.getStats() ? app.user.getStats().getWater() : 0 }}
    </div>
    <div class="hud-item">
      ‚≠ê XP: {{ app.user.getStats() ? app.user.getStats().getTotalXp() : 0 }}
    </div>
  </div>

  {# ü™¥ INVENTAIRE DE PLANTES bien positionn√© #}
  <div id="inventory">
    <div class="inventory-title">üå± Inventaire</div>
<button class="plant-btn" data-plant="tree1">
  üå≥ Arbre Normal <span class="plant-qty">(Loading...)</span>
</button>
<button class="plant-btn" data-plant="fireTree">
  üî• Arbre de Feu <span class="plant-qty">(Loading...)</span>
</button>


  </div>

  <script>
    window.userStreak = {{ app.user.getStats() ? app.user.getStats().getStreak() : 0 }};
    window.userWater = {{ app.user.getStats() ? app.user.getStats().getWater() : 0 }};
    window.userXp = {{ app.user.getStats() ? app.user.getStats().getTotalXp() : 0 }};
  </script>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <!-- Phaser CDN -->
  <script src="https://cdn.jsdelivr.net/npm/phaser@3.60.0/dist/phaser.min.js"></script>
  <!-- Ton script de jeu -->
  <script type="module" src="{{ asset('game/main.js') }}"></script>

  <style>
    html, body {
      margin: 0;
      padding: 0;
      width: 100vw;
      height: 100vh;
      overflow: hidden;
      background-color: #e6fce6;
    }

    #game-container {
      position: absolute;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      z-index: 0;
    }

    canvas {
      display: block;
      width: 100% !important;
      height: 100% !important;
    }

    #hud {
      position: fixed;
      top: 20px;
      right: 20px;
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      gap: 10px;
      z-index: 10000;
      font-family: Arial, sans-serif;
      pointer-events: none;
    }

    .hud-item {
      font-size: 22px;
      font-weight: bold;
      color: #333;
      background: rgba(255, 255, 255, 0.85);
      padding: 8px 14px;
      border-radius: 8px;
    }

    #inventory {
      position: fixed;
      top: 50%;
      right: 20px;
      transform: translateY(-50%);
      display: flex;
      flex-direction: column;
      gap: 12px;
      align-items: flex-end;
      background: rgba(255, 255, 255, 0.9);
      padding: 20px;
      border-radius: 12px;
      z-index: 10000;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      font-family: Arial, sans-serif;
    }

    .inventory-title {
      font-size: 20px;
      font-weight: bold;
      margin-bottom: 10px;
      color: #2c3e50;
    }

    .plant-btn {
      font-size: 16px;
      font-weight: bold;
      background-color: #4CAF50;
      color: white;
      padding: 10px 16px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s;
      width: 180px;
      text-align: center;
    }

    .plant-btn:disabled {
      background-color: #ccc;
      cursor: not-allowed;
    }

    .plant-qty {
      margin-left: 8px;
      font-weight: normal;
      color: #eee;
    }

    .plant-btn:hover:not(:disabled) {
      background-color: #45a049;
    }
  </style>
{% endblock %}
